<tr><td><span id="libcheck-result"><div style="text-align:center;"><i class="fa fa-spinner fa-spin"></i> <em>Please wait, retrieving information...</em></div></span></td></tr>
<tr><td><div id="libcheck-complete" style="text-align:center; display:none;"><strong>The diagnostic program's analysis is now complete.<br>Please <a href=".">refresh this page</a>, if you would like to run it once again.</strong></div></td></tr>
</tbody>
</table>

<script type="text/javascript">
function getLibCheck() {
    $.get('/plugins/libcheck/include/get_libcheck.php',function(data) {
        if (data) { 
            $('#libcheck-result').html(data);
            $('#libcheck-complete').show();
	    } else {
            getLibCheck();
        }
    });
}
$(function()
{
    getLibCheck();
});
</script>
